{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "lib",
        "module": "commonjs",
        "target": "esnext",
        "lib": ["esnext"],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "declaration": true,
        "sourceMap": true,
        "incremental": true,
        "strict": true
    },
    "exclude": [
        "node_modules",
        "lib",
        "examples",
        "**/*.test.ts",
        "**/webpack.config.ts"
    ],
    "compilation": {
        "compiler": {
            "context": "src",
            "outputPath": "lib"
        }
    }
}
